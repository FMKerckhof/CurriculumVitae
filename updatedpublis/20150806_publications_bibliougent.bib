  author       = {Kerckhof, Frederiek-Maarten and Courtens, Emilie and Geirnaert, Annelies and Hoefman, Sven and Ho, Adrian and Vilchez Vargas, Ramiro and Pieper, Dietmar H and Jauregui, Ruy and Vlaeminck, Siegfried and Van de Wiele, Tom and Vandamme, Peter and Heylen, Kim and Boon, Nico},
  issn         = {1932-6203},
  journal      = {PLOS ONE},
  keyword      = {RNA,PRESERVATION,IMPACT,METHANE,FECAL MICROBIOTA,METHANOTROPHIC COMMUNITIES,OXIDIZING BACTERIA,LONG-TERM STORAGE,ROTATING BIOLOGICAL CONTACTOR,HETEROTROPHIC GROUNDWATER COMMUNITY},
  language     = {eng},
