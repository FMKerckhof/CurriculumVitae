  language     = {eng},
  number       = {8},
  pages        = {3609--3618},
  title        = {Exploring methane-oxidizing communities for the co-metabolic degradation of organic micropollutants},
  url          = {http://dx.doi.org/10.1007/s00253-014-6226-1},
