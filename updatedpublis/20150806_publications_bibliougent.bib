  keyword      = {COMPLETE GENOME SEQUENCE,METHYLOSINUS-TRICHOSPORIUM OB3B,PHOSPHOLIPID FATTY-ACIDS,LANDFILL COVER SOIL,METHANOTROPHIC BACTERIA,RICE FIELD,AEROBIC METHANOTROPHS,II METHANOTROPHS,MESSENGER-RNA,RIBOSOMAL-RNA},
  language     = {eng},
  number       = {3},
  pages        = {335--345},
  title        = {Conceptualizing functional traits and ecological characteristics of methane-oxidizing bacteria as life strategies},
  url          = {http://dx.doi.org/10.1111/j.1758-2229.2012.00370.x},
